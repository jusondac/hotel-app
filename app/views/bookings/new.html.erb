<% content_for :page_title, "New Booking" %>
<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900">Create New Booking</h1>
  <p class="mt-2 text-gray-600">Book a room for a guest</p>
</div>
<div class="max-w-2xl">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Booking Details</h3>
    </div>
    <%= form_with model: @booking, local: true, class: "px-6 py-4 space-y-6" do |form| %>
      <% if @booking.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@booking.errors.count, "error") %> prohibited this booking from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @booking.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div>
        <%= form.label :guest_name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :guest_name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500", placeholder: "Guest full name" %>
      </div>
      <div>
        <%= form.label :room_id, "Room", class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :room_id, Room.all, :id, :name, 
            { prompt: 'Select a room' }, 
            { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" } %>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :start_date, "Check-in Date", class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_field :start_date, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500", min: Date.current %>
        </div>
        <div>
          <%= form.label :end_date, "Check-out Date", class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_field :end_date, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500", min: Date.current %>
        </div>
      </div>
      <!-- Payment Section -->
      <div class="border-t border-gray-200 pt-6">
        <h4 class="text-lg font-medium text-gray-900 mb-4">Initial Payment</h4>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= label_tag "payment_amount", "Payment Amount ($)", class: "block text-sm font-medium text-gray-700" %>
            <%= number_field_tag "payment_amount", nil, step: 0.01, min: 0, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500", placeholder: "0.00" %>
          </div>
          <div>
            <%= label_tag "payment_date", "Payment Date", class: "block text-sm font-medium text-gray-700" %>
            <%= date_field_tag "payment_date", Date.current, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
          </div>
        </div>
      </div>
      <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
        <%= link_to "Cancel", bookings_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <%= form.submit "Create Booking", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
<script>
  // Auto-calculate dates and show room price
  document.addEventListener('DOMContentLoaded', function() {
    const roomSelect = document.getElementById('booking_room_id');
    const startDate = document.getElementById('booking_start_date');
    const endDate = document.getElementById('booking_end_date');
    const paymentAmount = document.getElementById('payment_amount');

    // Room prices (you might want to fetch this via AJAX)
    const roomPrices = {
      <% Room.all.each do |room| %>
        '<%= room.id %>': <%= room.price %>,
      <% end %>
    };

    function calculateTotal() {
      const roomId = roomSelect.value;
      const start = new Date(startDate.value);
      const end = new Date(endDate.value);

      if (roomId && start && end && end > start) {
        const nights = Math.ceil((end - start) / (1000 * 60 * 60 * 24));
        const pricePerNight = roomPrices[roomId];
        const total = nights * pricePerNight;
        paymentAmount.value = total.toFixed(2);
      }
    }

    roomSelect.addEventListener('change', calculateTotal);
    startDate.addEventListener('change', calculateTotal);
    endDate.addEventListener('change', calculateTotal);

    // Set minimum end date to start date + 1
    startDate.addEventListener('change', function() {
      if (startDate.value) {
        const minEndDate = new Date(startDate.value);
        minEndDate.setDate(minEndDate.getDate() + 1);
        endDate.min = minEndDate.toISOString().split('T')[0];
      }
    });
  });
</script>
