<% content_for :page_title, "Dashboard Overview" %>
<!-- Page Header with Gradient -->
<div class="mb-10">
  <div class="bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 rounded-2xl p-8 text-white shadow-xl">
    <h1 class="text-4xl font-bold mb-2">Hotel Management Dashboard</h1>
    <p class="text-blue-100 text-lg">Welcome back! Here's what's happening at your hotel today.</p>
  </div>
</div>
<!-- Stats Grid with Gradients -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
  <!-- Total Rooms Card -->
  <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl p-6 text-white shadow-lg transform hover:scale-105 transition-all duration-200">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-blue-100 text-sm font-medium">Total Rooms</p>
        <p class="text-3xl font-bold"><%= @total_rooms || 0 %></p>
      </div>
      <div class="bg-white/20 p-3 rounded-xl">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
        </svg>
      </div>
    </div>
  </div>
  <!-- Active Bookings Card -->
  <div class="bg-gradient-to-br from-emerald-500 to-teal-600 rounded-2xl p-6 text-white shadow-lg transform hover:scale-105 transition-all duration-200">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-emerald-100 text-sm font-medium">Active Bookings</p>
        <p class="text-3xl font-bold"><%= @active_bookings || 0 %></p>
      </div>
      <div class="bg-white/20 p-3 rounded-xl">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
      </div>
    </div>
  </div>
  <!-- Room Occupancy Card -->
  <div class="bg-gradient-to-br from-orange-500 to-red-500 rounded-2xl p-6 text-white shadow-lg transform hover:scale-105 transition-all duration-200">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-orange-100 text-sm font-medium">Occupancy Rate</p>
        <p class="text-3xl font-bold"><%= @room_occupancy || 0 %>%</p>
      </div>
      <div class="bg-white/20 p-3 rounded-xl">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
      </div>
    </div>
  </div>
  <!-- Total Revenue Card -->
  <div class="bg-gradient-to-br from-purple-500 to-pink-600 rounded-2xl p-6 text-white shadow-lg transform hover:scale-105 transition-all duration-200">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-purple-100 text-sm font-medium">Total Revenue</p>
        <p class="text-3xl font-bold">$<%= number_with_precision(@total_revenue || 0, precision: 0) %></p>
      </div>
      <div class="bg-white/20 p-3 rounded-xl">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
    </div>
  </div>
</div>
<!-- Content Grid -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
  <!-- Recent Bookings -->
  <div class="bg-white/70 backdrop-blur-md rounded-2xl shadow-xl border border-white/20">
    <div class="px-6 py-4 border-b border-gray-100">
      <div class="flex items-center space-x-3">
        <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-2 rounded-xl">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-800">Recent Bookings</h3>
      </div>
    </div>
    <div class="px-6 py-4">
      <% if @recent_bookings&.any? %>
        <div class="space-y-4">
          <% @recent_bookings.each do |booking| %>
            <div class="flex items-center space-x-4 p-4 rounded-xl bg-gradient-to-r from-gray-50 to-white border border-gray-100 hover:shadow-md transition-all duration-200">
              <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                <span class="text-white font-bold text-lg"><%= booking.guest_name&.first || "?" %></span>
              </div>
              <div class="flex-1">
                <p class="font-semibold text-gray-800"><%= booking.guest_name || "Unknown Guest" %></p>
                <p class="text-sm text-gray-600">
                  <%= booking.room&.name || "Unknown Room" %> â€¢ <%= booking.start_date %> to <%= booking.end_date %>
                </p>
              </div>
              <div class="text-right">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gradient-to-r from-green-100 to-emerald-100 text-green-800">
                  $<%= booking.payments&.sum(:amount) || 0 %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          <p class="text-gray-500 mt-4">No bookings yet</p>
        </div>
      <% end %>
      <div class="mt-6 pt-4 border-t border-gray-100">
        <%= link_to "View all bookings", bookings_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
      </div>
    </div>
  </div>
  <!-- Low Inventory Alert -->
  <div class="bg-white/70 backdrop-blur-md rounded-2xl shadow-xl border border-white/20">
    <div class="px-6 py-4 border-b border-gray-100">
      <div class="flex items-center space-x-3">
        <div class="bg-gradient-to-r from-orange-500 to-red-500 p-2 rounded-xl">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-800">Inventory Alerts</h3>
      </div>
    </div>
    <div class="px-6 py-4">
      <% if @low_inventory_items&.any? %>
        <div class="space-y-4">
          <% @low_inventory_items.each do |inventory| %>
            <div class="flex items-center space-x-4 p-4 rounded-xl bg-gradient-to-r from-red-50 to-orange-50 border border-red-100 hover:shadow-md transition-all duration-200">
              <div class="w-12 h-12 bg-gradient-to-r from-red-500 to-orange-500 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <p class="font-semibold text-gray-800"><%= inventory.name || "Unknown Inventory" %></p>
                <p class="text-sm text-gray-600">Rooms: <%= inventory.rooms.pluck(:name).join(", ") if inventory.rooms.any? %></p>
              </div>
              <div>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gradient-to-r from-red-100 to-orange-100 text-red-800">
                  <%= inventory.quantity || 0 %> left
                </span>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <p class="text-gray-500 mt-4">All inventory levels are adequate</p>
        </div>
      <% end %>
      <div class="mt-6 pt-4 border-t border-gray-100">
        <%= link_to "Manage inventory", inventories_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500" %>
      </div>
    </div>
  </div>
</div>
<!-- Upcoming Checkouts -->
<div class="bg-white/70 backdrop-blur-md rounded-2xl shadow-xl border border-white/20">
  <div class="px-6 py-4 border-b border-gray-100">
    <div class="flex items-center space-x-3">
      <div class="bg-gradient-to-r from-indigo-500 to-purple-600 p-2 rounded-xl">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-gray-800">Upcoming Checkouts (Next 7 Days)</h3>
    </div>
  </div>
  <div class="px-6 py-4">
    <% if @upcoming_checkouts&.any? %>
      <div class="overflow-hidden rounded-xl">
        <table class="min-w-full">
          <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Guest</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Room</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Checkout Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @upcoming_checkouts.each do |booking| %>
              <tr class="hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 transition-all duration-200">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
                      <span class="text-white text-sm font-bold"><%= booking.guest_name&.first || "?" %></span>
                    </div>
                    <div class="ml-3">
                      <div class="text-sm font-medium text-gray-900"><%= booking.guest_name || "Unknown Guest" %></div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= booking.room&.name || "Unknown Room" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= booking.end_date %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= (booking.end_date - booking.start_date).to_i %> days
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a4 4 0 118 0v4m-4 8a4 4 0 11-8 0v1a10 10 0 0020 0v-1a4 4 0 11-8 0"></path>
        </svg>
        <p class="text-gray-500 mt-4">No upcoming checkouts</p>
      </div>
    <% end %>
  </div>
</div>
