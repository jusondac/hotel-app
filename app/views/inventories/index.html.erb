<div class="mb-6">
  <h1 class="text-3xl font-bold text-gray-900">Inventories</h1>
  <p class="mt-2 text-gray-600">Manage hotel inventory items</p>
</div>

<div class="mb-6">
  <%= link_to "New Inventory", new_inventory_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-150 ease-in-out" %>
</div>

<div class="bg-white shadow-md rounded-lg overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rooms</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @inventories.each do |inventory| %>
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
            <%= inventory.name %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= inventory.quantity %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= inventory.unit %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= inventory.rooms.count %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
            <%= link_to "View", inventory, class: "text-blue-600 hover:text-blue-900 mr-3" %>
            <%= link_to "Edit", edit_inventory_path(inventory), class: "text-indigo-600 hover:text-indigo-900 mr-3" %>
            <%= link_to "Delete", inventory, method: :delete, 
                confirm: "Are you sure?", 
                class: "text-red-600 hover:text-red-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @inventories.empty? %>
    <div class="text-center py-8">
      <p class="text-gray-500">No inventories found.</p>
      <%= link_to "Create your first inventory", new_inventory_path, class: "text-blue-600 hover:text-blue-900" %>
    </div>
  <% end %>
</div>
