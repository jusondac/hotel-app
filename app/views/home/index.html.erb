<div class="min-h-screen bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900">
  <!-- Navigation -->
  <nav class="relative z-10 py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center">
        <div class="text-2xl font-bold text-white">
          <span class="text-amber-400">✦</span> Grand Hotels
        </div>
        <div class="space-x-4">
          <%= link_to "Sign In", new_session_path, class: "text-white hover:text-amber-400 transition duration-300" %>
          <%= link_to "Sign Up", new_user_path, class: "bg-amber-500 hover:bg-amber-600 text-slate-900 font-semibold px-6 py-2 rounded-full transition duration-300" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
            <path d="M 10 0 L 0 0 0 10" fill="none" stroke="white" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100" height="100" fill="url(#grid)" />
      </svg>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
      <div class="text-center">
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-8 leading-tight">
          Luxury <span class="text-amber-400">Redefined</span><br>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-300 to-purple-300">Every Stay</span>
        </h1>
        <p class="text-xl text-blue-100 mb-12 max-w-3xl mx-auto leading-relaxed">
          Experience unparalleled hospitality in the world's most prestigious destinations. From boutique escapes to grand palaces, your perfect stay awaits.
        </p>
        
        <!-- Search Bar -->
        <div class="max-w-4xl mx-auto mb-12">
          <div class="bg-white/10 backdrop-blur-md rounded-2xl p-6 border border-white/20">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
              <div class="space-y-2">
                <label class="text-white text-sm font-medium">Destination</label>
                <input type="text" placeholder="Where to?" class="w-full px-4 py-3 bg-white/20 border border-white/30 rounded-lg text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-amber-400">
              </div>
              <div class="space-y-2">
                <label class="text-white text-sm font-medium">Check-in</label>
                <input type="date" class="w-full px-4 py-3 bg-white/20 border border-white/30 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-amber-400">
              </div>
              <div class="space-y-2">
                <label class="text-white text-sm font-medium">Check-out</label>
                <input type="date" class="w-full px-4 py-3 bg-white/20 border border-white/30 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-amber-400">
              </div>
              <div class="space-y-2">
                <label class="text-white text-sm font-medium">Guests</label>
                <select class="w-full px-4 py-3 bg-white/20 border border-white/30 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-amber-400">
                  <option>1 Guest</option>
                  <option>2 Guests</option>
                  <option>3 Guests</option>
                  <option>4+ Guests</option>
                </select>
              </div>
            </div>
            <button class="w-full mt-6 bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 text-slate-900 font-bold py-4 px-8 rounded-xl transition duration-300 transform hover:scale-105">
              Search Luxury Hotels
            </button>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <%= link_to new_session_path, class: "group relative bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold py-4 px-8 rounded-xl transition duration-300 transform hover:scale-105" do %>
            <span class="relative z-10">Explore Collection</span>
            <div class="absolute inset-0 bg-gradient-to-r from-blue-400 to-purple-400 rounded-xl opacity-0 group-hover:opacity-20 transition duration-300"></div>
          <% end %>
          <%= link_to new_user_path, class: "bg-white/10 hover:bg-white/20 backdrop-blur-md text-white font-semibold py-4 px-8 rounded-xl border border-white/30 transition duration-300 transform hover:scale-105" do %>
            Join Our Club
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Featured Destinations -->
  <div class="py-20 bg-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white mb-4">Featured Destinations</h2>
        <p class="text-blue-200 text-lg">Discover our handpicked collection of extraordinary locations</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="group relative overflow-hidden rounded-2xl">
          <div class="h-80 bg-gradient-to-br from-blue-500 to-purple-600 p-8 flex items-end">
            <div class="text-white">
              <h3 class="text-2xl font-bold mb-2">Paris, France</h3>
              <p class="text-blue-100">Timeless elegance in the City of Light</p>
              <div class="mt-4 text-amber-400">From $450/night</div>
            </div>
          </div>
        </div>
        <div class="group relative overflow-hidden rounded-2xl">
          <div class="h-80 bg-gradient-to-br from-emerald-500 to-teal-600 p-8 flex items-end">
            <div class="text-white">
              <h3 class="text-2xl font-bold mb-2">Tokyo, Japan</h3>
              <p class="text-emerald-100">Modern luxury meets ancient tradition</p>
              <div class="mt-4 text-amber-400">From $380/night</div>
            </div>
          </div>
        </div>
        <div class="group relative overflow-hidden rounded-2xl">
          <div class="h-80 bg-gradient-to-br from-rose-500 to-pink-600 p-8 flex items-end">
            <div class="text-white">
              <h3 class="text-2xl font-bold mb-2">Santorini, Greece</h3>
              <p class="text-rose-100">Breathtaking views of the Aegean Sea</p>
              <div class="mt-4 text-amber-400">From $520/night</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Luxury Services -->
  <div class="py-20 bg-gradient-to-br from-slate-800 to-slate-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white mb-4">Unmatched Luxury</h2>
        <p class="text-blue-200 text-lg">Every detail crafted for your perfect experience</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="text-center group">
          <div class="bg-gradient-to-br from-amber-400 to-orange-500 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition duration-300">
            <svg class="w-10 h-10 text-slate-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Personal Concierge</h3>
          <p class="text-blue-200">24/7 dedicated service for all your needs</p>
        </div>
        <div class="text-center group">
          <div class="bg-gradient-to-br from-blue-400 to-indigo-500 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition duration-300">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Michelin Dining</h3>
          <p class="text-blue-200">World-class culinary experiences</p>
        </div>
        <div class="text-center group">
          <div class="bg-gradient-to-br from-emerald-400 to-teal-500 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition duration-300">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Private Transport</h3>
          <p class="text-blue-200">Luxury transfers and exclusive access</p>
        </div>
        <div class="text-center group">
          <div class="bg-gradient-to-br from-purple-400 to-pink-500 rounded-full w-20 h-20 flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition duration-300">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-3">Wellness & Spa</h3>
          <p class="text-blue-200">Rejuvenate in world-class facilities</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Testimonials -->
  <div class="py-20 bg-slate-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white mb-4">What Our Guests Say</h2>
        <p class="text-blue-200 text-lg">Experiences that exceed expectations</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white/5 backdrop-blur-md rounded-2xl p-8 border border-white/10">
          <div class="flex items-center mb-4">
            <div class="flex text-amber-400">
              <span>★★★★★</span>
            </div>
          </div>
          <p class="text-blue-100 mb-6 italic">"An absolutely extraordinary experience. Every detail was perfect, from the stunning suite to the impeccable service."</p>
          <div class="flex items-center">
            <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-purple-500 rounded-full"></div>
            <div class="ml-4">
              <div class="text-white font-semibold">Sarah Chen</div>
              <div class="text-blue-300 text-sm">CEO, TechCorp</div>
            </div>
          </div>
        </div>
        <div class="bg-white/5 backdrop-blur-md rounded-2xl p-8 border border-white/10">
          <div class="flex items-center mb-4">
            <div class="flex text-amber-400">
              <span>★★★★★</span>
            </div>
          </div>
          <p class="text-blue-100 mb-6 italic">"The personal concierge made our anniversary unforgettable. Truly luxury hospitality at its finest."</p>
          <div class="flex items-center">
            <div class="w-12 h-12 bg-gradient-to-br from-emerald-400 to-teal-500 rounded-full"></div>
            <div class="ml-4">
              <div class="text-white font-semibold">Michael Rodriguez</div>
              <div class="text-blue-300 text-sm">Investment Banker</div>
            </div>
          </div>
        </div>
        <div class="bg-white/5 backdrop-blur-md rounded-2xl p-8 border border-white/10">
          <div class="flex items-center mb-4">
            <div class="flex text-amber-400">
              <span>★★★★★</span>
            </div>
          </div>
          <p class="text-blue-100 mb-6 italic">"From booking to checkout, everything was seamless. The attention to detail is what sets them apart."</p>
          <div class="flex items-center">
            <div class="w-12 h-12 bg-gradient-to-br from-rose-400 to-pink-500 rounded-full"></div>
            <div class="ml-4">
              <div class="text-white font-semibold">Emma Thompson</div>
              <div class="text-blue-300 text-sm">Fashion Designer</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Newsletter CTA -->
  <div class="py-20 bg-gradient-to-br from-slate-900 to-black">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold text-white mb-4">Stay in the Know</h2>
      <p class="text-blue-200 mb-8 text-lg">Be the first to discover new destinations and exclusive offers</p>
      <div class="max-w-md mx-auto flex gap-4">
        <input type="email" placeholder="Enter your email" class="flex-1 px-6 py-4 bg-white/10 border border-white/30 rounded-xl text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-amber-400">
        <button class="bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 text-slate-900 font-bold px-8 py-4 rounded-xl transition duration-300">
          Subscribe
        </button>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-black py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div>
          <div class="text-2xl font-bold text-white mb-4">
            <span class="text-amber-400">✦</span> Grand Hotels
          </div>
          <p class="text-gray-400">Redefining luxury hospitality across the globe.</p>
        </div>
        <div>
          <h3 class="text-white font-semibold mb-4">Destinations</h3>
          <ul class="space-y-2 text-gray-400">
            <li><a href="#" class="hover:text-amber-400 transition duration-300">Europe</a></li>
            <li><a href="#" class="hover:text-amber-400 transition duration-300">Asia</a></li>
            <li><a href="#" class="hover:text-amber-400 transition duration-300">Americas</a></li>
            <li><a href="#" class="hover:text-amber-400 transition duration-300">Africa</a></li>
          </ul>
        </div>
        <div>
          <h3 class="text-white font-semibold mb-4">Services</h3>
          <ul class="space-y-2 text-gray-400">
            <li><a href="#" class="hover:text-amber-400 transition duration-300">Concierge</a></li>
            <li><a href="#" class="hover:text-amber-400 transition duration-300">Dining</a></li>
            <li><a href="#" class="hover:text-amber-400 transition duration-300">Wellness</a></li>
            <li><a href="#" class="hover:text-amber-400 transition duration-300">Events</a></li>
          </ul>
        </div>
        <div>
          <h3 class="text-white font-semibold mb-4">Connect</h3>
          <ul class="space-y-2 text-gray-400">
            <li><a href="#" class="hover:text-amber-400 transition duration-300">Contact Us</a></li>
            <li><a href="#" class="hover:text-amber-400 transition duration-300">Support</a></li>
            <li><a href="#" class="hover:text-amber-400 transition duration-300">Careers</a></li>
            <li><a href="#" class="hover:text-amber-400 transition duration-300">Press</a></li>
          </ul>
        </div>
      </div>
      <div class="border-t border-gray-800 mt-12 pt-8 text-center text-gray-400">
        <p>&copy; 2025 Grand Hotels. All rights reserved.</p>
      </div>
    </div>
  </footer>
</div>
