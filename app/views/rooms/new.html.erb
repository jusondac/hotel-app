<% content_for :page_title, "New Room" %>
<div class="mb-8">
  <div class="flex items-center space-x-4">
    <%= link_to rooms_path, class: "text-gray-600 hover:text-gray-900 transition-colors" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Create New Room</h1>
      <p class="mt-2 text-gray-600">Add a new room to your hotel inventory</p>
    </div>
  </div>
</div>
<div class="max-w-4xl mx-auto">
  <%= form_with(model: @room, local: true, html: { class: "space-y-8" }) do |form| %>
    <% if @room.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-xl p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc list-inside space-y-1">
                <% @room.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <!-- Room Basic Information -->
    <div class="bg-white/70 backdrop-blur-md rounded-2xl shadow-xl border border-white/20 p-8">
      <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900 flex items-center">
          <div class="bg-gradient-to-r from-emerald-500 to-teal-600 p-2 rounded-xl mr-3">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          Room Information
        </h2>
        <p class="text-gray-600 mt-2">Basic details about the room</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :name, 
              class: "block w-full px-4 py-3 rounded-xl border border-gray-200 shadow-sm focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-all duration-200",
              placeholder: "e.g., Room 101, Executive Suite A" %>
        </div>
        <div>
          <%= form.label :price, "Price per Night ($)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.number_field :price, 
              step: 0.01,
              min: 0,
              class: "block w-full px-4 py-3 rounded-xl border border-gray-200 shadow-sm focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-all duration-200",
              placeholder: "0.00" %>
        </div>
        <div class="md:col-span-2">
          <%= form.label :room_type_id, "Room Type", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <% if @room_types.any? %>
            <%= form.select :room_type_id, 
                options_from_collection_for_select(@room_types, :id, :name, @room.room_type_id), 
                { prompt: "Select a room type..." },
                { 
                  class: "block w-full px-4 py-3 rounded-xl border border-gray-200 shadow-sm focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-all duration-200",
                  id: "room_type_select"
                } %>
          <% else %>
            <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-yellow-800">
                    No room types available. 
                    <%= link_to "Create a room type first", new_room_type_path, class: "font-medium underline hover:text-yellow-900" %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="md:col-span-2">
          <%= form.label :inventory_id, "Inventory", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <% if @inventories.any? %>
            <%= form.select :inventory_id, 
                options_from_collection_for_select(@inventories, :id, :name, @room.inventory_id), 
                { prompt: "Select an inventory..." },
                { 
                  class: "block w-full px-4 py-3 rounded-xl border border-gray-200 shadow-sm focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-all duration-200"
                } %>
          <% else %>
            <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-yellow-800">
                    No inventories available. 
                    <%= link_to "Create an inventory first", new_inventory_path, class: "font-medium underline hover:text-yellow-900" %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <!-- Room Type Facilities Preview -->
    <div id="facilities-preview" class="bg-white/70 backdrop-blur-md rounded-2xl shadow-xl border border-white/20 p-8" style="display: none;">
      <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900 flex items-center">
          <div class="bg-gradient-to-r from-purple-500 to-pink-600 p-2 rounded-xl mr-3">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
            </svg>
          </div>
          Included Facilities
        </h2>
        <p class="text-gray-600 mt-2">Standard facilities that will be included with this room</p>
      </div>
      <div id="facilities-content" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <!-- Facilities will be loaded here -->
      </div>
    </div>
    <!-- Form Actions -->
    <div class="flex items-center justify-end space-x-4">
      <%= link_to "Cancel", rooms_path, 
          class: "px-6 py-3 border border-gray-300 rounded-xl text-gray-700 hover:bg-gray-50 font-medium transition-all duration-200" %>
      <%= form.submit "Create Room", 
          class: "bg-gradient-to-r from-emerald-600 to-teal-600 text-white px-8 py-3 rounded-xl hover:from-emerald-700 hover:to-teal-700 font-medium transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" %>
    </div>
  <% end %>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const roomTypeSelect = document.getElementById('room_type_select');
    const facilitiesPreview = document.getElementById('facilities-preview');
    const facilitiesContent = document.getElementById('facilities-content');

    if (roomTypeSelect) {
      roomTypeSelect.addEventListener('change', function() {
        const roomTypeId = this.value;

        if (roomTypeId) {
          facilitiesPreview.style.display = 'block';

          fetch(`/room_types/${roomTypeId}.json`)
            .then(response => response.json())
            .then(data => {
              facilitiesContent.innerHTML = '';

              if (data.facilities && data.facilities.length > 0) {
                data.facilities.forEach(facility => {
                  const facilityCard = document.createElement('div');
                  facilityCard.className = 'bg-gradient-to-r from-gray-50 to-white rounded-xl p-4 border border-gray-100';
                  facilityCard.innerHTML = `
                    <div class="flex items-center space-x-3">
                      <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                      </div>
                      <div>
                        ${facility.description ? `<p class="text-xs text-gray-600">${facility.description}</p>` : ''}
                      </div>
                    </div>
                  `;
                  facilitiesContent.appendChild(facilityCard);
                });
              } else {
                facilitiesContent.innerHTML = `
                  <div class="col-span-full text-center py-8">
                    <p class="text-gray-500">No facilities defined for this room type</p>
                  </div>
                `;
              }
            })
            .catch(error => {
              console.error('Error loading facilities:', error);
              facilitiesContent.innerHTML = `
                <div class="col-span-full text-center py-8">
                  <p class="text-red-500">Error loading facilities</p>
                </div>
              `;
            });
        } else {
          facilitiesPreview.style.display = 'none';
        }
      });
    }
  });
</script>
