<% content_for :page_title, "New Room" %>
<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900">Add New Room</h1>
  <p class="mt-2 text-gray-600">Create a new room for your hotel</p>
</div>
<div class="max-w-2xl">
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Room Details</h3>
    </div>
    <%= form_with model: @room, local: true, class: "px-6 py-4 space-y-6" do |form| %>
      <% if @room.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @room.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500", placeholder: "e.g., Suite 101, Deluxe Room A" %>
      </div>
      <div>
        <%= form.label :room_type, class: "block text-sm font-medium text-gray-700" %>
        <%= form.select :room_type, 
            options_for_select([
              ['Standard Room', 'standard'],
              ['Deluxe Room', 'deluxe'],
              ['Suite', 'suite'],
              ['Executive Suite', 'executive'],
              ['Presidential Suite', 'presidential']
            ], @room.room_type), 
            { prompt: 'Select room type' }, 
            { class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" } %>
      </div>
      <div>
        <%= form.label :price, "Price per night ($)", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :price, step: 0.01, min: 0, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500", placeholder: "0.00" %>
      </div>
      <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
        <%= link_to "Cancel", rooms_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <%= form.submit "Create Room", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
