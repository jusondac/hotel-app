<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Sign in to your account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Welcome back to our hotel booking platform
      </p>
    </div>
    <%= form_with url: session_url, class: "mt-8 space-y-6" do |form| %>
      <% if alert = flash[:alert] %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md">
          <%= alert %>
        </div>
      <% end %>
      <% if notice = flash[:notice] %>
        <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-md">
          <%= notice %>
        </div>
      <% end %>
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Email address", value: params[:email_address], class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
        <div>
          <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Password", maxlength: 72, class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>
      <div class="flex items-center justify-between">
        <div class="text-sm">
          <%= link_to "Forgot your password?", new_password_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>
      <div>
        <%= form.submit "Sign in", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
      <div class="text-center">
        <span class="text-sm text-gray-600">Don't have an account? </span>
        <%= link_to "Sign up", new_user_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
      </div>
    <% end %>
  </div>
</div>
