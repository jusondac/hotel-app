<div class="flex items-start justify-between mb-4">
  <h4 class="text-lg font-semibold text-gray-800 flex items-center">
    <div class="bg-gradient-to-r from-blue-500 to-indigo-600 p-1 rounded-lg mr-2">
      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
      </svg>
    </div>
    Facility Details
  </h4>
  <button type="button" 
          data-action="click->nested-form#removeFacility"
    class="text-red-600 hover:text-red-800 transition-colors p-1 rounded-lg hover:bg-red-50">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
    </svg>
  </button>
</div>
<%= f.hidden_field :_destroy %>
<div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
  <div>
    <%= f.label :name, "Facility Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :name, 
        class: "block w-full px-3 py-2 rounded-lg border border-gray-200 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200",
        placeholder: "e.g., Air Conditioning, WiFi, Mini Bar" %>
  </div>
  <div>
    <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :description, 
        class: "block w-full px-3 py-2 rounded-lg border border-gray-200 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200",
        placeholder: "Brief description of the facility" %>
  </div>
</div>
<!-- Inventory Section -->
<div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg p-4 border border-blue-100">
  <h5 class="text-md font-medium text-gray-800 mb-3 flex items-center">
    <div class="bg-gradient-to-r from-orange-500 to-red-500 p-1 rounded-lg mr-2">
      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
      </svg>
    </div>
    Inventory Information
  </h5>
  <%= f.fields_for :inventory do |inventory_form| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <%= inventory_form.label :quantity, "Standard Quantity", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= inventory_form.number_field :quantity, 
            class: "block w-full px-3 py-2 rounded-lg border border-gray-200 shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all duration-200",
            placeholder: "e.g., 1, 2, 5",
            min: 0 %>
      </div>
      <div>
        <%= inventory_form.label :unit, "Unit", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= inventory_form.text_field :unit, 
            class: "block w-full px-3 py-2 rounded-lg border border-gray-200 shadow-sm focus:ring-2 focus:ring-orange-500 focus:border-orange-500 transition-all duration-200",
            placeholder: "e.g., piece, set, bottle" %>
      </div>
    </div>
  <% end %>
</div>
