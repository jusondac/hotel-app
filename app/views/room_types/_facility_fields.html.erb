<div class="facility-fields bg-white border border-gray-200 rounded-lg p-4 mb-4" data-nested-form-target="item">
  <div class="flex items-start justify-between mb-4">
    <h4 class="text-lg font-semibold text-gray-800 flex items-center">
      <div class="bg-gradient-to-r from-blue-500 to-indigo-600 p-1 rounded-lg mr-2">
        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
        </svg>
      </div>
      Facility Details
    </h4>
    <button type="button" 
            data-action="click->nested-form#removeFacility"
      class="text-red-600 hover:text-red-800 transition-colors p-1 rounded-lg hover:bg-red-50">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
    </button>
  </div>
  <%= f.hidden_field :_destroy %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= f.label :description, "Facility Description", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_area :description, 
          rows: 3,
          class: "block w-full px-3 py-2 rounded-lg border border-gray-200 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200",
          placeholder: "Describe this facility..." %>
    </div>
    <div>
      <%= f.label :inventory_id, "Associated Inventory", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.select :inventory_id, 
          options_from_collection_for_select(inventories, :id, :name, f.object.inventory_id),
          { prompt: "Select an inventory item" },
          { class: "block w-full px-3 py-2 rounded-lg border border-gray-200 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" } %>
    </div>
  </div>
</div>
