<% content_for :page_title, "Edit #{@room_type.name}" %>
<div class="mb-8">
  <div class="flex items-center space-x-4">
    <%= link_to room_type_path(@room_type), class: "text-gray-600 hover:text-gray-900 transition-colors" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    <% end %>
    <div>
      <h1 class="text-4xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">Edit Room Type</h1>
      <p class="mt-3 text-lg text-gray-600">Update room type details and facilities</p>
    </div>
  </div>
</div>
<%= form_with(model: @room_type, local: true, 
    html: { 
      class: "space-y-8"
    }) do |form| %>
  <!-- Error Messages -->
  <% if @room_type.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-xl p-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@room_type.errors.count, "error") %> prohibited this room type from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% @room_type.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <!-- Room Type Basic Info -->
  <div class="bg-white/80 backdrop-blur-md rounded-2xl shadow-lg border border-white/20 p-8">
    <div class="mb-6">
      <h2 class="text-2xl font-bold text-gray-900 flex items-center">
        <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-3 rounded-xl mr-4">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
        Room Type Information
      </h2>
      <p class="text-gray-600 mt-2">Basic details about this room type</p>
    </div>
    <div class="grid grid-cols-1 gap-6">
      <div>
        <%= form.label :name, class: "block text-sm font-semibold text-gray-700 mb-3" %>
        <%= form.text_field :name, 
            class: "block w-full px-4 py-3 rounded-xl border border-gray-200 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-lg",
            placeholder: "e.g., Deluxe Suite, Standard Room, Executive Suite" %>
      </div>
      <div>
        <%= form.label :description, class: "block text-sm font-semibold text-gray-700 mb-3" %>
        <%= form.text_area :description, 
            rows: 4,
            class: "block w-full px-4 py-3 rounded-xl border border-gray-200 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200",
            placeholder: "Describe the room type, its features, and what makes it special..." %>
      </div>
      <div>
        <%= form.label :price, class: "block text-sm font-semibold text-gray-700 mb-3" %>
        <%= form.number_field :price, 
            step: 0.01,
            class: "block w-full px-4 py-3 rounded-xl border border-gray-200 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-lg",
            placeholder: "e.g., 150.00" %>
      </div>
    </div>
  </div>
  <!-- Facilities Section -->
  <div class="bg-white/80 backdrop-blur-md rounded-2xl shadow-lg border border-white/20 p-8">
    <div class="mb-6">
      <h2 class="text-2xl font-bold text-gray-900 flex items-center">
        <div class="bg-gradient-to-r from-green-500 to-teal-600 p-3 rounded-xl mr-4">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        </div>
        Facilities & Inventories
      </h2>
      <p class="text-gray-600 mt-2">Manage facilities and their associated inventories for this room type</p>
    </div>
    <div id="facilities" class="space-y-4">
      <%= form.fields_for :facilities do |facility_form| %>
        <%= render 'facility_fields', f: facility_form, inventories: @inventories %>
      <% end %>
    </div>
    <div class="mt-6">
      <%= link_to "Add Facility", "#", 
          id: "add_facility",
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-green-700 bg-green-100 hover:bg-green-200 transition-all duration-200" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        Add Facility
      <% end %>
    </div>
  </div>
  <!-- Form Actions -->
  <div class="flex items-center justify-end space-x-4 pt-6">
    <%= link_to "Cancel", @room_type, 
        class: "px-6 py-3 border border-gray-300 rounded-xl text-gray-700 hover:bg-gray-50 font-medium transition-all duration-200" %>
    <%= form.submit "Update Room Type", 
        class: "bg-gradient-to-r from-blue-600 to-purple-600 text-white px-8 py-3 rounded-xl hover:from-blue-700 hover:to-purple-700 font-medium transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" %>
  </div>
<% end %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    let facilityIndex = <%= @room_type.facilities.size %>;

    document.getElementById('add_facility').addEventListener('click', function(e) {
      e.preventDefault();

      const facilitiesDiv = document.getElementById('facilities');
      const newFacilityHtml = `
        <div class="facility-fields bg-white border border-gray-200 rounded-lg p-4 mb-4">
          <div class="flex items-start justify-between mb-4">
            <h4 class="text-lg font-semibold text-gray-800 flex items-center">
              <div class="bg-gradient-to-r from-blue-500 to-indigo-600 p-1 rounded-lg mr-2">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                </svg>
              </div>
              Facility Details
            </h4>
            <a href="#" class="remove-facility text-red-600 hover:text-red-800 transition-colors p-1 rounded-lg hover:bg-red-50">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            </a>
          </div>

          <input type="hidden" name="room_type[facilities_attributes][${facilityIndex}][_destroy]" value="false">

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Facility Description</label>
              <textarea name="room_type[facilities_attributes][${facilityIndex}][description]" rows="3" class="block w-full px-3 py-2 rounded-lg border border-gray-200 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" placeholder="Describe this facility..."></textarea>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Associated Inventory</label>
              <select name="room_type[facilities_attributes][${facilityIndex}][inventory_id]" class="block w-full px-3 py-2 rounded-lg border border-gray-200 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200">
                <option value="">Select an inventory item</option>
                <% @inventories.each do |inventory| %>
                  <option value="<%= inventory.id %>"><%= inventory.name %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>
      `;

      facilitiesDiv.insertAdjacentHTML('beforeend', newFacilityHtml);
      facilityIndex++;
    });

    document.addEventListener('click', function(e) {
      if (e.target.closest('.remove-facility')) {
        e.preventDefault();
        const facilityField = e.target.closest('.facility-fields');
        const destroyInput = facilityField.querySelector('input[name*="_destroy"]');
        if (destroyInput) {
          destroyInput.value = 'true';
          facilityField.style.display = 'none';
        } else {
          facilityField.remove();
        }
      }
    });
  });
</script>
