    <div class="mb-6">
      <h2 class="text-2xl font-bold text-gray-900 flex items-center">
        <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-3 rounded-xl mr-4">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
        Room Type Information
      </h2>
      <p class="text-gray-600 mt-2">Basic details about this room type</p>
    </div>
    
    <div class="grid grid-cols-1 gap-6">
      <div>
        <%= form.label :name, class: "block text-sm font-semibold text-gray-700 mb-3" %>
        <%= form.text_field :name, 
            class: "block w-full px-4 py-3 rounded-xl border border-gray-200 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 text-lg",
            placeholder: "e.g., Deluxe Suite, Standard Room, Executive Suite" %>
      </div>
      
      <div>
        <%= form.label :description, class: "block text-sm font-semibold text-gray-700 mb-3" %>
        <%= form.text_area :description, 
            rows: 4,
            class: "block w-full px-4 py-3 rounded-xl border border-gray-200 shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200",
            placeholder: "Describe the room type, its features, and what makes it special..." %>
      </div>
    </div>
  </div>

  <!-- Facilities Section -->
  <div class="bg-white/80 backdrop-blur-md rounded-2xl shadow-lg border border-white/20 p-8">
    <div class="mb-6">
      <h2 class="text-2xl font-bold text-gray-900 flex items-center">
        <div class="bg-gradient-to-r from-emerald-500 to-teal-600 p-3 rounded-xl mr-4">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        Room Facilities
      </h2>
      <p class="text-gray-600 mt-2">Manage the facilities and amenities available in this room type</p>
    </div>

    <div id="facilities-container" class="space-y-4">
      <%= form.fields_for :facilities do |facility_form| %>
        <div class="facility-field bg-gray-50 p-4 rounded-xl border border-gray-200 flex items-center space-x-4">
          <div class="flex-1">
            <%= facility_form.label :name, "Facility Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= facility_form.text_field :name, 
                class: "block w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-all duration-200",
                placeholder: "e.g., Wi-Fi, Air Conditioning, Mini Bar, Balcony" %>
            <%= facility_form.hidden_field :id if facility_form.object.persisted? %>
          </div>
          <div class="flex-shrink-0 pt-6">
            <% if facility_form.object.persisted? %>
              <%= facility_form.check_box :_destroy, class: "hidden" %>
              <button type="button" class="remove-facility p-2 text-red-600 hover:text-red-800 hover:bg-red-50 rounded-lg transition-all duration-200" title="Remove Facility">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              </button>
            <% else %>
              <button type="button" class="remove-facility p-2 text-red-600 hover:text-red-800 hover:bg-red-50 rounded-lg transition-all duration-200" title="Remove Facility">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              </button>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-6">
      <button type="button" id="add-facility" class="inline-flex items-center px-4 py-2 bg-emerald-100 text-emerald-700 rounded-lg hover:bg-emerald-200 transition-all duration-200 font-medium">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Add Another Facility
      </button>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex items-center justify-end space-x-4 pt-6">
    <%= link_to "Cancel", @room_type, 
        class: "px-6 py-3 border border-gray-300 rounded-xl text-gray-700 hover:bg-gray-50 font-medium transition-all duration-200" %>
    <%= form.submit "Update Room Type", 
        class: "bg-gradient-to-r from-blue-600 to-purple-600 text-white px-8 py-3 rounded-xl hover:from-blue-700 hover:to-purple-700 font-medium transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" %>
  </div>
<% end %>

<!-- JavaScript for Dynamic Facilities -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  const container = document.getElementById('facilities-container');
  const addButton = document.getElementById('add-facility');
  let facilityIndex = <%= @room_type.facilities.length %>;

  // Add facility functionality
  addButton.addEventListener('click', function() {
    const facilityHtml = `
      <div class="facility-field bg-gray-50 p-4 rounded-xl border border-gray-200 flex items-center space-x-4">
        <div class="flex-1">
          <label class="block text-sm font-medium text-gray-700 mb-2">Facility Name</label>
          <input type="text" name="room_type[facilities_attributes][${facilityIndex}][name]" 
                 class="block w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-all duration-200"
                 placeholder="e.g., Wi-Fi, Air Conditioning, Mini Bar, Balcony">
        </div>
        <div class="flex-shrink-0 pt-6">
          <button type="button" class="remove-facility p-2 text-red-600 hover:text-red-800 hover:bg-red-50 rounded-lg transition-all duration-200" title="Remove Facility">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
          </button>
        </div>
      </div>
    `;
    container.insertAdjacentHTML('beforeend', facilityHtml);
    facilityIndex++;
  });

  // Remove facility functionality
  container.addEventListener('click', function(e) {
    if (e.target.closest('.remove-facility')) {
      const facilityField = e.target.closest('.facility-field');
      const destroyCheckbox = facilityField.querySelector('input[name*="_destroy"]');
      
      if (destroyCheckbox) {
        // For existing facilities, mark for destruction
        destroyCheckbox.checked = true;
        facilityField.style.opacity = '0.5';
        facilityField.style.textDecoration = 'line-through';
      } else {
        // For new facilities, remove from DOM
        facilityField.remove();
      }
    }
  });
});
</script>
