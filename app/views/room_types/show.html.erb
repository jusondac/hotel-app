<% content_for :page_title, @room_type.name %>
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <%= link_to room_types_path, class: "text-gray-600 hover:text-gray-900 transition-colors" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @room_type.name %></h1>
        <p class="mt-2 text-gray-600"><%= @room_type.description %></p>
      </div>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Edit", edit_room_type_path(@room_type), 
          class: "bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-4 py-2 rounded-xl hover:from-blue-700 hover:to-indigo-700 font-medium transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" %>
      <%= link_to "Delete", room_type_path(@room_type), method: :delete, 
          data: { confirm: "Are you sure?" },
          class: "bg-gradient-to-r from-red-600 to-pink-600 text-white px-4 py-2 rounded-xl hover:from-red-700 hover:to-pink-700 font-medium transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" %>
    </div>
  </div>
</div>
<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- Room Type Info -->
  <div class="lg:col-span-1">
    <div class="bg-white/70 backdrop-blur-md rounded-2xl shadow-xl border border-white/20 p-6">
      <h3 class="text-xl font-bold text-gray-900 mb-4">Room Type Details</h3>
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-gray-500">Total Facilities</span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gradient-to-r from-blue-100 to-indigo-100 text-blue-800">
            <%= @room_type.facilities.count %>
          </span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-gray-500">Rooms Using This Type</span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gradient-to-r from-green-100 to-emerald-100 text-green-800">
            <%= @room_type.rooms.count %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <!-- Facilities List -->
  <div class="lg:col-span-2">
    <div class="bg-white/70 backdrop-blur-md rounded-2xl shadow-xl border border-white/20 p-6">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-bold text-gray-900">Standard Facilities</h3>
        <%= link_to "Edit Facilities", edit_room_type_path(@room_type), 
            class: "text-blue-600 hover:text-blue-800 font-medium transition-colors" %>
      </div>
      <% if @room_type.facilities.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% @room_type.facilities.each do |facility| %>
            <div class="bg-gradient-to-r from-gray-50 to-white rounded-xl p-4 border border-gray-100">
              <div class="flex items-start justify-between">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  <div>
                    <h4 class="text-sm font-medium text-gray-900"><%= facility.name %></h4>
                    <% if facility.description.present? %>
                      <p class="text-xs text-gray-600 mt-1"><%= facility.description %></p>
                    <% end %>
                    <% if facility.inventory %>
                      <p class="text-xs text-blue-600 mt-1">
                        <%= facility.inventory.quantity %> <%= facility.inventory.unit %>
                      </p>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
          </svg>
          <h3 class="text-lg font-medium text-gray-900 mt-4">No facilities defined</h3>
          <p class="text-gray-500 mt-2">Add facilities to define what's included with this room type.</p>
          <div class="mt-6">
            <%= link_to "Add Facilities", edit_room_type_path(@room_type), 
                class: "bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 py-3 rounded-xl hover:from-blue-700 hover:to-purple-700 font-medium transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- Rooms using this type -->
<% if @room_type.rooms.any? %>
  <div class="mt-8">
    <div class="bg-white/70 backdrop-blur-md rounded-2xl shadow-xl border border-white/20 p-6">
      <h3 class="text-xl font-bold text-gray-900 mb-6">Rooms Using This Type</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @room_type.rooms.each do |room| %>
          <div class="bg-gradient-to-r from-gray-50 to-white rounded-xl p-4 border border-gray-100">
            <div class="flex items-center justify-between">
              <div>
                <h4 class="text-sm font-medium text-gray-900"><%= room.name %></h4>
                <p class="text-xs text-gray-600 mt-1">$<%= room.price %>/night</p>
              </div>
              <%= link_to room_path(room), class: "text-blue-600 hover:text-blue-800 transition-colors" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
