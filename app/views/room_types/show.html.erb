<% content_for :page_title, @room_type.name %>
<div class="mb-8">
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-4">
      <%= link_to room_types_path, class: "text-gray-600 hover:text-gray-900 transition-colors" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      <% end %>
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @room_type.name %></h1>
        <p class="mt-2 text-gray-600"><%= @room_type.description %></p>
        <p class="mt-1 text-lg font-semibold text-green-600">$<%= number_with_precision(@room_type.price, precision: 2) %> per night</p>
      </div>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Edit", edit_room_type_path(@room_type), 
          class: "bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-4 py-2 rounded-xl hover:from-blue-700 hover:to-indigo-700 font-medium transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" %>
      <%= link_to "Delete", room_type_path(@room_type), method: :delete, 
          data: { confirm: "Are you sure?" },
          class: "bg-gradient-to-r from-red-600 to-pink-600 text-white px-4 py-2 rounded-xl hover:from-red-700 hover:to-pink-700 font-medium transition-all duration-200 shadow-lg hover:shadow-xl transform hover:scale-105" %>
    </div>
  </div>
</div>
<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
  <!-- Room Type Info -->
  <div class="lg:col-span-1">
    <div class="bg-white/70 backdrop-blur-md rounded-2xl shadow-xl border border-white/20 p-6">
      <h3 class="text-xl font-bold text-gray-900 mb-4">Room Type Details</h3>
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-gray-500">Rooms Using This Type</span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gradient-to-r from-green-100 to-emerald-100 text-green-800">
            <%= @room_type.rooms.count %>
          </span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-gray-500">Facilities</span>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gradient-to-r from-blue-100 to-indigo-100 text-blue-800">
            <%= @room_type.facilities.count %>
          </span>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-sm font-medium text-gray-500">Price per Night</span>
          <span class="text-lg font-bold text-green-600">$<%= number_with_precision(@room_type.price, precision: 2) %></span>
        </div>
      </div>
    </div>
  </div>
  <!-- Facilities List -->
  <div class="lg:col-span-2">
    <div class="bg-white/70 backdrop-blur-md rounded-2xl shadow-xl border border-white/20 p-6">
      <h3 class="text-xl font-bold text-gray-900 mb-6">Facilities & Inventories</h3>
      <% if @room_type.facilities.any? %>
        <div class="space-y-4">
          <% @room_type.facilities.each do |facility| %>
            <div class="bg-gradient-to-r from-gray-50 to-white rounded-xl p-4 border border-gray-100">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <h4 class="text-sm font-medium text-gray-900 mb-2">Facility Description</h4>
                  <p class="text-sm text-gray-600 mb-3"><%= facility.description %></p>
                  <div class="flex items-center">
                    <span class="text-xs font-medium text-gray-500 mr-2">Inventory:</span>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-purple-100 to-pink-100 text-purple-800">
                      <%= facility.inventory&.name || 'No inventory' %>
                      <% if facility.inventory %>
                        â€¢ <%= facility.inventory.quantity %> <%= facility.inventory.unit %>
                      <% end %>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No facilities</h3>
          <p class="mt-1 text-sm text-gray-500">Get started by adding facilities to this room type.</p>
          <div class="mt-6">
            <%= link_to "Add Facility", edit_room_type_path(@room_type), 
                class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
<!-- Rooms using this type -->
<% if @room_type.rooms.any? %>
  <div class="mt-8">
    <div class="bg-white/70 backdrop-blur-md rounded-2xl shadow-xl border border-white/20 p-6">
      <h3 class="text-xl font-bold text-gray-900 mb-6">Rooms Using This Type</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @room_type.rooms.each do |room| %>
          <div class="bg-gradient-to-r from-gray-50 to-white rounded-xl p-4 border border-gray-100">
            <div class="flex items-center justify-between">
              <div>
                <h4 class="text-sm font-medium text-gray-900"><%= room.name %></h4>
                <p class="text-xs text-gray-600 mt-1">$<%= number_with_precision(@room_type.price, precision: 2) %>/night</p>
              </div>
              <%= link_to room_path(room), class: "text-blue-600 hover:text-blue-800 transition-colors" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
