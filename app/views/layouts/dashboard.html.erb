<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Hotel Management Dashboard" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= yield :head %>
    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="bg-gradient-to-br from-slate-50 to-blue-50 min-h-screen">
    <!-- Navigation Header with FLAT UI Design -->
    <nav class="bg-white/80 backdrop-blur-md border-b border-white/20 shadow-lg shadow-slate-200/50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo Section -->
          <div class="flex items-center">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <div>
                <div class="text-xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
                  Grand Hotels
                </div>
                <div class="text-xs text-gray-500 -mt-1">Management System</div>
              </div>
            </div>
          </div>
          <!-- Navigation Menu -->
          <div class="hidden lg:flex items-center space-x-1">
            <%= link_to dashboard_path, class: "group relative px-4 py-2 rounded-xl text-sm font-medium transition-all duration-200 #{'bg-gradient-to-r from-blue-500 to-purple-600 text-white shadow-lg' if current_page?(dashboard_path)} #{!current_page?(dashboard_path) ? 'text-gray-600 hover:text-gray-800 hover:bg-white/60' : ''}" do %>
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
              Dashboard
            <% end %>
            <%= link_to rooms_path, class: "group relative px-4 py-2 rounded-xl text-sm font-medium transition-all duration-200 #{'bg-gradient-to-r from-emerald-500 to-teal-600 text-white shadow-lg' if current_page?(rooms_path)} #{!current_page?(rooms_path) ? 'text-gray-600 hover:text-gray-800 hover:bg-white/60' : ''}" do %>
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              Rooms
            <% end %>
            <%= link_to room_types_path, class: "group relative px-4 py-2 rounded-xl text-sm font-medium transition-all duration-200 #{'bg-gradient-to-r from-cyan-500 to-blue-600 text-white shadow-lg' if current_page?(room_types_path) || current_page?(new_room_type_path)} #{!current_page?(room_types_path) && !current_page?(new_room_type_path) ? 'text-gray-600 hover:text-gray-800 hover:bg-white/60' : ''}" do %>
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
              </svg>
              Room Types
            <% end %>
            <%= link_to bookings_path, class: "group relative px-4 py-2 rounded-xl text-sm font-medium transition-all duration-200 #{'bg-gradient-to-r from-orange-500 to-red-500 text-white shadow-lg' if current_page?(bookings_path)} #{!current_page?(bookings_path) ? 'text-gray-600 hover:text-gray-800 hover:bg-white/60' : ''}" do %>
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              Bookings
            <% end %>
            <%= link_to inventories_path, class: "group relative px-4 py-2 rounded-xl text-sm font-medium transition-all duration-200 #{'bg-gradient-to-r from-purple-500 to-pink-600 text-white shadow-lg' if current_page?(inventories_path)} #{!current_page?(inventories_path) ? 'text-gray-600 hover:text-gray-800 hover:bg-white/60' : ''}" do %>
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
              Inventories
            <% end %>
            <%= link_to account_manager_index_path, class: "group relative px-4 py-2 rounded-xl text-sm font-medium transition-all duration-200 #{'bg-gradient-to-r from-indigo-500 to-blue-600 text-white shadow-lg' if current_page?(account_manager_index_path)} #{!current_page?(account_manager_index_path) ? 'text-gray-600 hover:text-gray-800 hover:bg-white/60' : ''}" do %>
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
              </svg>
              Users
            <% end %>
          </div>
          <!-- User Profile Section -->
          <div class="flex items-center space-x-4">
            <div class="hidden sm:flex items-center space-x-3">
              <div class="text-right">
                <div class="text-sm font-medium text-gray-700"><%= Current.user&.email_address&.split('@')&.first || "User" %></div>
                <% if Current.user&.role %>
                  <div class="text-xs text-gray-500"><%= Current.user.role.name %></div>
                <% end %>
              </div>
              <div class="w-8 h-8 bg-gradient-to-r from-violet-500 to-purple-600 rounded-full flex items-center justify-center shadow-lg">
                <span class="text-white text-sm font-bold"><%= Current.user&.email_address&.first&.upcase || "U" %></span>
              </div>
            </div>
            <%= button_to session_path, method: :delete, class: "group p-2 rounded-xl text-gray-500 hover:text-red-600 hover:bg-red-50 transition-all duration-200" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
    <!-- Main Content -->
    <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
      <%= yield %>
    </div>
  </body>
</html>
